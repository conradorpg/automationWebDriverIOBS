pipeline {
    agent any

    stages {
        stage('Clonar reposit√≥rio') {
            steps {
                git branch: 'main', url: 'https://github.com/conradorpg/testes-e2e-ebac-shop.git'
            }
        }
    stage('Instalar dependencias') {
            steps {
                sh 'npm install'
            }
        }
    stage('Executar testes') {
            steps {
                sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}